<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
    <li data-target="#myCarousel" data-slide-to="4"></li>
    <li data-target="#myCarousel" data-slide-to="5"></li>
  </ol>
<!--   <h1 class="main-header">CHARGING MADE EASY</h1> -->
  <!-- Wrapper for slides -->

    <div class="carousel-inner">
      <div class="item active">
        <div class="car-img" style="background-image: url(<%= image_path('instructional_slides_1') %>)">
        </div>
      </div>

      <div class="item">
        <div class="car-img" style="background-image: url(<%= image_path('instructional_slides_2') %>)">
        </div>
      </div>

      <div class="item">
        <div class="car-img" style="background-image: url(<%= image_path('instructional_slides_3') %>)">
        </div>
      </div>

      <div class="item">
        <div class="car-img" style="background-image: url(<%= image_path('instructional_slides_4') %>)">
        </div>
      </div>

      <div class="item">
        <div class="car-img" style="background-image: url(<%= image_path('instructional_slides_5') %>)">
        </div>
      </div>

      <div class="item">
        <div class="car-img" style="background-image: url(<%= image_path('instructional_slides_6') %>)">
        </div>
      </div>
    </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
