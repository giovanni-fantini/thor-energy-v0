<div class="banner-3">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pricing-header">
        <h1>Pricing</h1>
        <p>____</p>
      </div>
      <div class="pricing">
        <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
          <div class="pricing-card-container">
            <div class="pricing-card-row-1">
              <h1>Simple and Transparent</h1>
            </div>
            <div class="pricing-card-row-2">
              <div class="pricing-card-row-2-a">
                <p><strong class="price">£3</strong></p>
                <p>price if battery is<br> returned within 23hrs</p>
              </div>
              <div class="pricing-card-row-2-b">
                <p><strong class="price">£10</strong></p>
                <p>price if battery is <br> not returned in 23 hrs</p>
              </div>
            </div>
            <div class="pricing-card-row-3">
              <p><i class="fas fa-bolt"></i> Use your card at the dispenser to get a powerbank</p>
              <p><i class="far fa-clock"></i> Each powerbank rental is good for a 23hr duration</p>
              <p><i class="fas fa-credit-card"></i> Your card is charged after the rental duration expires</p>
              <p></p>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
          <div class="pricing-create-account-container">
              <h1>Sign Up</h1>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>

                <div class="pricing-form-inputs">
                  <%= f.input :email, required: true, autofocus: false %>
                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                  <%= f.input :password_confirmation, required: true %>
                </div>
                <div class="pricing-form-actions">
                  <%= f.button :submit, "Sign up" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
